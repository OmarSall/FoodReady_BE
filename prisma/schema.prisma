generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        Int        @id @default(autoincrement())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  employees Employee[]
  Order     Order[]
}

model Employee {
  id                 Int          @id @default(autoincrement())
  name               String
  email              String       @unique
  position           EmployeeRole
  companyId          Int
  company            Company      @relation(fields: [companyId], references: [id])
  passwordHash       String?
  inviteToken        String?      @unique
  inviteTokenExpires DateTime?
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  Order              Order[]
}

enum EmployeeRole {
  OWNER
  EMPLOYEE
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model Order {
  id          Int         @id @default(autoincrement())
  title       String
  description String?
  status      OrderStatus @default(PENDING)
  // Public token used in QR/link for cutomers. Must be unique and unguessable
  trackingId  String      @unique
  company     Company     @relation(fields: [companyId], references: [id])
  companyId   Int
  createdBy   Employee    @relation(fields: [createdById], references: [id])
  createdById Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
